WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Benutzername"


            TextInput:
                id:ben
                multiline: False

            Label:
                text: "Password"


            TextInput:
                id:passw
                multiline: False


        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if ben.text == "KloTipps" and passw.text == "KloTipps" else "main"
                root.manager.transition.direstion = "left"
<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
