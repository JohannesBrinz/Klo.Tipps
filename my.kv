WindowManager:
    MainWindow:
    SecondWindow:
    CreateAccountWindow

<CreateAccountWindow>:
    name: "create"

    password : passw
    namee : ben
    email:email

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Benutzername"


            TextInput:
                id:ben
                multiline: False

            Label:
                text: "Email"


            TextInput:
                id:email
                multiline: False

            Label:
                text: "Password"


            TextInput:
                id:passw

                multiline: False
        Button:
            text: "Registrieren"
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()



<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Benutzername"


            TextInput:
                id:ben
                multiline: False

            Label:
                text: "Password"


            TextInput:
                id:passw
                multiline: False

        GridLayout:
            cols:1
            Button:
                text: "Registrieren"
                on_release:
                    app.root.current = "create"
                    root.manager.transition.direstion = "left"
            Button:
                text: "Anmelden"
                on_release:
                    app.root.current = "second" if ben.text == "KloTipps" and passw.text == "KloTipps" else "main"
                    root.manager.transition.direstion = "left"



<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
